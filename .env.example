# Hyperliquid
HL_PRIVATE_KEY=your_ethereum_private_key
HL_WALLET_ADDRESS=your_wallet_address
HL_USE_TESTNET=true  # Set to 'true' for testnet, 'false' for mainnet

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Database (Railway provides this)
DATABASE_URL=postgresql://user:pass@host:port/db

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECT_TIMEOUT=5000

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=info  # debug, info, warn, error

# Dashboard Security
DASHBOARD_API_KEY=your_secure_api_key_here  # Generate with: openssl rand -hex 32
CORS_ORIGINS=https://your-domain.com  # Comma-separated list of allowed origins

# Trading Config
INITIAL_CAPITAL=100
REPORT_TIME_UTC=15:00
MCL_INTERVAL_MINUTES=60
